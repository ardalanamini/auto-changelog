{
  "name": "auto-changelog",
  "version": "4.0.1",
  "private": true,
  "description": "Github Automatic Changelog action",
  "author": {
    "name": "Ardalan Amini",
    "email": "ardalanamini22@gmail.com",
    "url": "https://ardalanamini.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/ardalanamini/auto-changelog#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardalanamini/auto-changelog.git"
  },
  "bugs": {
    "url": "https://github.com/ardalanamini/auto-changelog/issues"
  },
  "keywords": [
    "actions",
    "changelog"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prepare": "is-ci || husky",
    "lint": "eslint --cache --cache-location ./.cache/eslint/ .",
    "lint:fix": "pnpm lint --fix",
    "build": "tsc -p ./tsconfig.build.json",
    "build:watch": "pnpm build --watch",
    "package": "ncc build --out action --minify --source-map --license licenses.txt",
    "all": "pnpm lint:fix && pnpm build && pnpm package",
    "test": "node --expose-gc node_modules/jest/bin/jest -c jest.config.ts",
    "test:coverage": "pnpm test --coverage",
    "test:types": "tsc -p ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "marked": "^15.0.12",
    "semver": "^7.7.2",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@swc/core": "^1.11.31",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^29.5.14",
    "@types/semver": "^7.7.0",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^9.28.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-noir": "^3.0.0",
    "fetch-mock": "^12.5.2",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
